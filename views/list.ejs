<%- include('header'); -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% if(ToDoListItems.length !=0) { %>
            <% for(var i=0; i<ToDoListItems.length; i++) { %>
                <div class="item">
                    <input type="checkbox" id=<%=ToDoListItems[i] %>>       
                    <label for=<%=ToDoListItems[i] %>><p for="checked"> <%=ToDoListItems[i]%> </p></label>
                </div>
            <% } %>
        <% } %>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New item.." autocomplete="off" autofocus="autofocus">
            <button type="submit" name="listTitle" value=<%= listTitle%>>+</button>
        </form>
    </div>

<%- include('footer'); -%>
